@charset "utf-8";
/* CSS Document */
.rp{
width:100%; height:38px;
  line-height:38px;
  font-size:20px; color:#e86e61;
  margin-bottom: 18px;
  background:#f2f2f2;
}

.rp .myscore{
	display:inline-block;
	font-size:16px;
	margin-left:20px;
}

.rp .scoreLabel{
	display:inline-block;
	height:100%; line-height:41px;
	font-size:12px; color:#000;
	font-family:"宋体";
	margin-left:20px;
}

.rp .scoreValue{
	display:inline-block;
	height:100%; line-height:41px;
	font-size:16px; color:#e86e61;
}

.rp .condition{
	display:inline-block;
	width:auto; height:auto;
	margin-top:8px;padding:1px;
	border:1px solid #ababab;
	min-width:85px; min-height:19px;
	float:right;
}

.mcd {
	width:810px; height:auto;
	padding:30px 24px 0px 28px;
	border:1px solid #dcdcdc;
	min-height:912px;
}

.detail_info {
	width:100%; height:463px;
	margin-bottom: 30px;
}

.detail_pic {
	width:495px; height: 461px;
	border:1px solid #d1d1d1;
	float:left;
}

.adviser_intro {
	float:left;
	width:287px; height:461px; 
	margin-left:26px;
}

.adviser_name {
	width:100%; height:29px;
	border-bottom:1px solid #e0e0e0;
	padding:17px 0px 9px;
}

.adviser_name .la{
	display:inline-block;
	float:left;
	width:75px; height:29px;
	line-height:42px;
	color:#999;
	vertical-align:bottom;
}

.adviser_name .va{
	display:inline-block; 
	width:207px; height:29px;
	line-height:29px;
	font-size:29px; color:#f67b6e;
	overflow:hidden; white-space:nowrap; text-overflow:ellipsis;
}



.adviser_intro .intro{
	width:281px; height:234px;
	padding:28px 3px 0px;
	overflow:hidden;
	word-break:break-all; 
	font-size:12px; color:#000;
}

.mcd {
	width:100%; height:auto;
	padding:30px 0px 0px 0px;
	border:1px solid #dcdcdc;
	min-height:780px;
	position:relative;
}

.subtitle{
	width:761px; height:37px;	
	margin:20px auto 0px;
}

.pubdate{
	display:inline-block;
	width:130px; height:100%;
	line-height:37px;
	color:#999; font-family:"宋体"; font-size:12px;
	float:left;
}

.sub_share{
	display:inline-block;
	width:140px; height:100%;
	line-height:37px;
	color:#999; font-family:"宋体"; font-size:12px;
	float:right;
}

.sub_share_l{
	display:inline-block; 
	width:56px; height:100%;
	line-height:37px;
	color:#999; font-family:"宋体"; font-size:12px;
	float:left;
}