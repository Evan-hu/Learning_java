/**
 * 日历
 */

/*------ calendar start ------*/
.calendar{ width:100px; height:16px; padding:3px; background:url(../images/calendar_arrow.png) #fff 86px center no-repeat; border:1px solid #bbb; line-height:16px; font-family:Tahoma; font-size:12px; cursor:pointer;}
.calendarWrapper{ position:absolute; z-index:2147483647; background:#fff;
-moz-box-shadow: 2px 2px 0px #ccc;
-webkit-box-shadow: 2px 2px 0px #ccc;
-khtml-box-shadow: 2px 2px 0px #ccc;
-ms-box-shadow: 2px 2px 0px #ccc;
filter: progid:DXImageTransform.Microsoft.Shadow(direction = 155, Color = #dadada, Strength = 3), progid:DXImageTransform.Microsoft.DropShadow(Color = #22aaaaaa, OffX = 0, OffY = 0);    
border:1px solid #9BC0E0; font-size:12px; font-family:Tahoma; line-height:20px; color:#444; overflow:hidden; text-align:center;}
.calendarWrapper a{ color:#008fd2; text-decoration:underline;}
.calendarWrapper .calendarCon{ height:180px; overflow:hidden;}
.calendarWrapper .calendarCon .monthItem{ position:relative; display:inline-block; *display:inline; *zoom:1; vertical-align:top; width:168px; margin:4px; }

.calendarWrapper .caption{ height:24px; background:linear-gradient(top, #68B8FF, #249CFF); background: -moz-linear-gradient(top, #68B8FF, #249CFF); background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#68B8FF), to(#249CFF)); background:#3CA5FF\0; *background:#3CA5FF; _background:#3CA5FF; color:#fff;}
.calendarWrapper .caption div{ display:inline-block; *display:inline; *zoom:1; vertical-align:top;}
.calendarWrapper .caption div a{ display:inline-block; width:20px; height:24px; line-height:24px; color:#fff; font-family:Lucida Grande; text-decoration:none;}
.calendarWrapper .caption a.monthName{ width:72px;}
.calendarWrapper .caption a.monthName:hover{text-decoration:underline; color:#f0ff00;}

.calendarWrapper .weekName{ padding:4px 0;}
.calendarWrapper .weekName span{ display:inline-block; width:24px; heigth:20px; background:#CCE7FF; line-height:20px; font-weight:normal;}

.calendarCon table .day{ display:block; width:24px; height:20px; color:#8C8C8C; text-decoration:none; cursor:default;}
.calendarCon table .nexMonth, .calendarWrapper .calendarCon table .lastMonth{ background:#fff; color:#fff;}
.calendarCon table .toMonth{ color:#004499; cursor:pointer;} 
.calendarCon table .toMonthHover{ background:#ebf4fc; }
.calendarCon table .checked{ background:#CCE7FF;}
.calendarCon table .checkedCompare{ background:#86BE2B;}

.calendarWrapper .selectList{ position:relative; padding:2px 10px; background:#fff;}
.calendarWrapper .selectListYear{ background:#f8f8f8; border-top:1px dashed #ccc;}
.calendarWrapper .selectList a{ display:inline-block; width:35px; height:24px; line-height:24px; color:#333; text-decoration: none; }
.calendarWrapper .selectList a.hover{ background:#E2F7FE; text-decoration: none;}
.calendarWrapper .selectList a.selected{ background:#B4E9FD;}
.calendarWrapper .selectList a.prevA{ position:absolute; left:0; top:20px; width:16px; height:16px; line-height:16px; color:#2A9EFF; font-weight:bold; font-family:Lucida Grande; text-decoration:none; text-align:center;}
.calendarWrapper .selectList a.nextA{ position:absolute; right:0; top:20px; width:16px; height:16px; line-height:16px; color:#2A9EFF; font-weight:bold; font-family:Lucida Grande; text-decoration:none; text-align:center;}

.calendarWrapper .selectList a.prevA:hover, .calendarWrapper .selectList a.nextA:hover{ background:#fff; color:#111;}

.calendarWrapper .selectPanel{ display:none; position:absolute; top:-3px; left:-3px; width:174px; height:170px;}
.calendarWrapper .selectPanelTop{ width:174px; height:25px; background:#eee; line-height:25px; text-align:center;}
.calendarWrapper .selectPanel .botBtn{ height:25px; background:#ddd; }

.calendarFooter{ position:relative; clear:both; min-height:24px; padding:4px; background:#f2f2f2; border-top:1px solid #ccc; line-height:18px; text-align:right;}
.calendarFooter .shortcuts{ position:absolute; left:15px; top:5px; height:18px; text-align:left; }
.calendarFooter .shortcuts a{ margin-right:5px; }
.calendarFooter .operateOpt{ width:80px; margin:0 auto; text-align:center;}
.calendarFooter .operateBtn{ position:absolute; right:0; bottom:5px;}
.calendarFooter .operateBtn input{ margin-right:5px;}
.calendarFooter .detailTime{ width:60px; height:18px; border:1px solid #ddd;; font-family:tahoma;}

.calendarFooter .compareAWrap{ border-left:1px solid #8e8e8e; position:relative; margin-bottom:-1px; overflow:hidden;}
.calendarFooter a.compareA{ display:block; float:left; height:22px; padding:0 6px; border:1px solid #8e8e8e; border-left:0;
	background-color: #F9F9F9;
	background-image: -webkit-gradient(linear, left top, left bottom, from(#F9F9F9), to(#e3e3e3)); 
	background-image: -webkit-linear-gradient(top, #F9F9F9, #e3e3e3); 
	background-image:    -moz-linear-gradient(top, #F9F9F9, #e3e3e3); 
	background-image:     -ms-linear-gradient(top, #F9F9F9, #e3e3e3); 
	background-image:      -o-linear-gradient(top, #F9F9F9, #e3e3e3); 
	background-image:         linear-gradient(top, #F9F9F9, #e3e3e3);
	text-align:center;
	line-height:22px;
	color:#141414;
	text-decoration:none;
}
.calendarFooter a.compareA:hover{
	background-color: #e3e3e3;
	background-image: -webkit-gradient(linear, left top, left bottom, from(#e1e1e1), to(#f6f6f6)); 
	background-image: -webkit-linear-gradient(top, #e1e1e1, #f6f6f6); 
	background-image:    -moz-linear-gradient(top, #e1e1e1, #f6f6f6); 
	background-image:     -ms-linear-gradient(top, #e1e1e1, #f6f6f6); 
	background-image:      -o-linear-gradient(top, #e1e1e1, #f6f6f6); 
	background-image:         linear-gradient(top, #e1e1e1, #f6f6f6);
}

.calendarFooter a.compareASelected, calendarFooter a.compareASelected:hover{
	background-color: #999999;
	background-image: -webkit-gradient(linear, left top, left bottom, from(#999999), to(#777777)); 
	background-image: -webkit-linear-gradient(top, #999999, #777777); 
	background-image:    -moz-linear-gradient(top, #999999, #777777); 
	background-image:     -ms-linear-gradient(top, #999999, #777777); 
	background-image:      -o-linear-gradient(top, #999999, #777777); 
	background-image:         linear-gradient(top, #999999, #777777);
	color:#fff;
}

.calendarFooter .compareOnOff{ position:absolute; left:0; top:0; height:24px;}
.calendarFooter .compareWrap{ position:relative; padding-left:50px; }
.calendarFooter .compareText{ width:120px; border:1px solid #ccc; padding:2px; height:14px; line-height:14px; font-family:Tahoma;}
.calendarFooter .compareVal{ width:300px; padding:8px; background:#fff; border:1px solid #8E8E8E; }
/*------ calendar end ------*/