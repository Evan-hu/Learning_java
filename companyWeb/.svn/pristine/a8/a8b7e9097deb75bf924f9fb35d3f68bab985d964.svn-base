@charset "utf-8";
/* CSS Document */
.rp{
  width:100%; height:38px;
  line-height:38px;
  font-size:20px; color:#e86e61;
  margin-bottom: 18px;
  background:#f2f2f2;
}

.rp .myscore{
	display:inline-block;
	font-size:16px;
	margin-left:20px;
}

.rp .scoreLabel{
	display:inline-block;
	height:100%; line-height:41px;
	font-size:12px; color:#000;
	font-family:"宋体";
	margin-left:20px;
}

.rp .scoreValue{
	display:inline-block;
	height:100%; line-height:41px;
	font-size:16px; color:#e86e61;
}

.rp .condition{
	display:inline-block;
	width:auto; height:auto;
	margin-top:8px;padding:1px;
	border:1px solid #ababab;
	min-width:85px; min-height:19px;
	float:right;
}

.mcd{
  width:830px; height:auto;
  padding:0px 17px 0px;
  border:1px solid #dcdcdc;
  min-height:450px;
}

.emcd {
    border: 1px solid #dcdcdc;
    height: auto;
    min-height: 600px;
    width: 862px;
  }
  .emcd p.bg {
    background: url("../../images/recui_1.jpg") no-repeat scroll 0 0 rgba(0, 0, 0, 0);
    height: 241px;
    width: 862px;
   }
   .emcd ul li {
    border-bottom: 1px dashed #a4a4a4;
    height: 44px;
    line-height: 44px;
    position: relative;
    width: auto;
    margin-left: 20px;
  }
  .emcd ul li span {
    display: inline-block;
    font-size: 12px;
    height: 100%;
    line-height: 44px;
    position: absolute; 
    right: 0;
    width: 70px;
}

.mtitle{
	width:100%; height:33px;
	line-height:33px;
	color:#E86E61; font-family:"宋体"; font-size:12px;
	margin-bottom:12px;
}

.mcontent{
	width:764px; height:auto;
	min-height:300px;
	margin:0px auto;
}

.mcontent .rtitle{
	width:100%; height:32px;
	line-height:32px;
	border-bottom:1px solid #c6c6c6;
}

.mcontent .rtitle .subtitle{
	display: inline-block;
	width:auto; height:100%;
	line-height:32px;
	float:left;
	font-size:16px;
}

.mcontent .rtitle .createTime{
	display:inline-block; 
	width:123px; height:100%;
	line-height:32px;
	float:right;
	font-family:"宋体"; font-size:12px;
}

.mcontent .rdetail{
	width:100%; height: auto;
	margin-top:34px;
}

.mcontent .rdetail p{
	width:100%; height:14px;
	line-height:14px;
	font-family:"宋体"; font-size:12px; color:#c6c6c6;
	margin-bottom:15px;
}

.mi{
	width:100%; height:auto;
	min-height:120px;
}

.mi ul{
	list-style-position:inside;
	color:#9e9e9e;
}

.mi ul li{
	height:32px; 
	line-height:32px;
}

.submitPanel{
	width:100%; height:27px;
	border-top:1px solid #d9d9d9;
	margin:20px auto 0px;
	padding:24px 0px;
	text-align:center;
}

.submit{
	width:151px; height:27px;
	float:right;
	background:url(../images/apply_job.png) no-repeat scroll 0 0;
}

.rd ul {
	width:100%; height:100%;
	list-style-position:inside;
	list-style-type:disc;
	color:#9E9E9E;
}

.rd ul li{
	width:255px; height:100%;
	float:left;
	margin-right:57px;
}

.rd ul li span.la{
	display:inline-block;
	width: 78px; height:100%;
	line-height:32px;
	font-family:"宋体"; color:#808080;
}

.rd ul li span.va{
	display:inline-block;
  width:156px;
  height:100%; 
	line-height:32px;
	color:#808080; font-family:"宋体";
}

.jobdetail {
	width:100%; height:auto;
	min-height:120px;
}

.jobdetail ul{
	list-style-position:inside;
	list-style-type:decimal;
}

.jobdetail ul li{
	font-family:"宋体";
	height:18px;
	line-height:18px;
	font-size:14px; color:#808080; 
	margin-bottom:10px;
}

  .rp {
    border-bottom: 1px solid #d4d4d4;
    color: #e86e61;
    font-size: 20px;
    height: 41px;
    line-height: 41px;
    width: 100%;
  }
  