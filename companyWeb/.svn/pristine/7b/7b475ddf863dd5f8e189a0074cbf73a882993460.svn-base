.transition {
	width:1100px; height:70px;
	margin:0px auto;
	position:absolute;
	top: 172px; left:161px;
	z-index:20;
}

.transition .prev{
	width:70px; height:100%;
	float:left;
}

.transition .next{
	width:70px; height:100%;
	float:right;
}

