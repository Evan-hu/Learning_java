@charset "utf-8";
/* CSS Document */
.rp{
width:100%; height:38px;
  line-height:38px;
  font-size:20px; color:#e86e61;
  margin-bottom: 18px;
  background:#f2f2f2;
}

.rp .myscore{
	display:inline-block;
	font-size:16px;
	margin-left:20px;
}

.rp .scoreLabel{
	display:inline-block;
	height:100%; line-height:41px;
	font-size:12px; color:#000;
	font-family:"宋体";
	margin-left:20px;
}

.rp .scoreValue{
	display:inline-block;
	height:100%; line-height:41px;
	font-size:16px; color:#e86e61;
}

.rp .condition{
	display:inline-block;
	width:auto; height:auto;
	margin-top:8px;padding:1px;
	border:1px solid #ababab;
	min-width:85px; min-height:19px;
	float:right;
}

.mcd{
	width:806px; height:819px;
	padding:30px 28px 40px;
	border:1px solid #dcdcdc;
	position:relative;
}

.shopPage {
	width:100%; height:100%;
	margin:0px auto;
}

.shop{
	width:370px; height:255px;
	float:left;
}

.shop_pic{
	width:364px; height:224px;
	border:1px solid #d1d1d1;
	padding:3px;
}

.shop_info{
	width:100%; height:23px;
	line-height:23px;
	text-align:center;
	color:#6f6f6f; font-family:"宋体"; font-size:12px;
	overflow:hidden; white-space:nowrap; text-overflow:ellipsis;
}

.single_shop{
	margin-right:61px;
}

.shop_bottom{
	margin-bottom:18px;
}

.page{
	width:190px; height:14px;
	position:absolute;
	left:41.2%; bottom:26px;
}

.page span.forward{
	display:inline-block;
	width:17px; height:17px;
	vertical-align:middle;
}

.page span.pageNum{
	display:inline-block;
	width:auto; height:17px;
	min-width:17px;
	line-height:17px;
    font-family:"宋体";color:#808080;
	text-align:center;
}

.page span.curPageNum{
	display:inline-block;
	width:auto; height:17px;
	min-width:17px;
	line-height:17px;
    font-family:"宋体";color:#f97466;
	text-align:center;
}

.sv{
	color:#42c129;
}

.cv{
	color:#f96f0a;
}

.noe{
	color:#000;
}


