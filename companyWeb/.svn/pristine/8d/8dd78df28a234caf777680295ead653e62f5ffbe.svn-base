@charset "utf-8";
/* CSS Document */
.rp{
 width:100%; height:38px;
  line-height:38px;
  font-size:20px; color:#e86e61;
  margin-bottom: 18px;
  background:#f2f2f2;f2f2f2;
}

.rp .myscore{
	display:inline-block;
	font-size:16px;
	margin-left:20px;
}

.rp .scoreLabel{
	display:inline-block;
	height:100%; line-height:41px;
	font-size:12px; color:#000;
	font-family:"宋体";
	margin-left:20px;
}

.rp .scoreValue{
	display:inline-block;
	height:100%; line-height:41px;
	font-size:16px; color:#e86e61;
}

.rp .condition{
	display:inline-block;
	width:auto; height:auto;
	margin-top:8px;padding:1px;
	border:1px solid #ababab;
	min-width:85px; min-height:19px;
	float:right;
}

.mcd {
	width:830px; height:auto;
	border:1px solid #dcdcdc;
	min-height:368px;
	padding:16px 16px 0px;
	position:relative;
}

.mcd div.map{
	width:508px; height:338px;
	float:left;
	border:1px solid #ddd;
}

.mcd div.info{
	width:320px; height:150px;
	margin-top:190px;
	text-indent:20px;
	position:absolute;
	right: 0px;
}

.info .cm{
	width:100%; 
	font-size:16px; color:#808080;
	margin-bottom:20px;
}

.info .oi{
	width:100%;
	font-size:14px; color:#808080;
	margin-bottom:4px;
}